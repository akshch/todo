<%= form_with model: ticket do |form| %>
  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title, required: true, class: 'form-control' %>
    <% ticket.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, required: true, class: 'form-control' %><br>
    <% ticket.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :developer %><br>
    <%= form.select :user_id, options_for_select(User.developer.map { |u| [u.email, u.id] }), {required: true, class: 'form-control'}  %>
    <% ticket.errors.full_messages_for(:user_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div><br>

  <div >
    <%= form.submit 'Submit', class: "btn btn-primary" %>
  </div>
<% end %>
