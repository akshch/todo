<%= form_with model: ticket do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, required: true %>
    <% ticket.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, required: true %><br>
    <% ticket.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
