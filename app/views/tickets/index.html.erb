<p id="notice"><%= notice %></p>

<h1>All Ticket</h1>

<br />
<%= link_to "New Ticket", new_ticket_path %>
<%= link_to "Export Ticket to CSV", tickets_path(format: 'csv'), class: '' %>

<%= form_with url: process_csv_ticket_path(@tickets), method: :post do |f|%>
	<div class="col-sm-8 col-md-10 nopaddingRight">
    <%= f.file_field 'document'%>
	</div>
  <div class="col-sm-4 col-md-2">
    <%= submit_tag "Submit", name: nil %>
  </div>
<% end %>

<br /><br />

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.title %></td>
         <td><%= ticket.description %></td>
        <td><%= ticket.status.titlecase %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
